{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": false,
    "declaration": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/@types", "./types/*"]
    }
  },
  "include": ["./src/**/*.ts", "types/index.d.ts"]
}
