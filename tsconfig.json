{
  "compilerOptions": {
    "outDir": "./dist/",
    "declarationDir": "./types/",
    "sourceMap": false,
    "declaration": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "removeComments": true,
    "lib": ["dom", "esnext"]
  },
  "include": ["./src/**/*.ts"]
}
